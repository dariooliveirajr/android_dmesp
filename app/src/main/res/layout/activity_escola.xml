<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dariooliveirajr.dmesp.EscolaActivity"
    android:background="@drawable/fundo">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/homeescola3"
        android:layout_below="@+id/imageView6"
        android:layout_alignBottom="@+id/btnConIdE" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/retangulo2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/imageView7"
        android:background="@drawable/topo2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnVoltaIdEsco"
        android:layout_toEndOf="@+id/btnVoltaIdEsco"
        android:layout_alignBottom="@+id/imageView6" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnConIdE"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnPlanIdE"
        android:layout_alignStart="@+id/btnPlanIdE"
        android:layout_marginBottom="17dp"
        android:background="#00ffffff" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnLicIdE"
        android:layout_above="@+id/btnConIdE"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="22dp"
        android:background="#00ffffff" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnPlanIdE"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnSobIdE"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_alignTop="@+id/btnLicIdE"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnVoltaIdEsco"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/volta"
        android:layout_above="@+id/imageView5" />

</RelativeLayout>
